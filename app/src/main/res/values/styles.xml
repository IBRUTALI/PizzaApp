<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Text style. -->
    <style name="TitleText">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="BaseText">
        <item name="android:textColor">@color/grey</item>
        <item name="android:fontFamily">@font/sf_ui_display_regular</item>
    </style>

    <style name="TitleText.Text1">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="BaseText.Text1">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="BaseText.Text2">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="BaseText.Text3">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/pink</item>
    </style>

    <!--  Toolbar  -->
    <style name="CustomToolbarStyle">
        <item name="android:popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <style name="CustomToolbarStyle.Event" parent="CustomToolbarStyle">
        <item name="android:titleTextAppearance">@style/TextAppearance.Widget.Event.Toolbar.Title
        </item>
        <item name="android:tint">?attr/colorPrimaryVariant</item>
        <item name="android:textColorPrimary">@color/black</item>
    </style>

    <style name="TextAppearance.Widget.Event.Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="textAppearanceBody1">@style/TitleText.Text1</item>
    </style>


</resources>